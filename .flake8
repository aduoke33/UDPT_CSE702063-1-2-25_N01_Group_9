[flake8]
max-line-length = 120
ignore = E501,W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info
per-file-ignores =
    # Ignore unused imports in test files (used in fixtures)
    */tests/*.py:F401,E402
    */tests/conftest.py:F401,E402
    # Ignore unused imports in __init__.py
    */__init__.py:F401
